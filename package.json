{
    "name": "co-consistent",
    "version": "1.3.1",
    "description": "globally consistent event ordering for decentralized distributed systems",
    "scripts": {
        "test": "nyc mocha -r ts-node/register ./test.ts",
        "build": "tsc",
        "check": "run-s check:prettier check:eslint",
        "check:prettier": "prettier --check src/**/*.{ts,tsx}",
        "check:eslint": "eslint src",
        "fix": "run-s fix:prettier fix:eslint",
        "fix:prettier": "prettier --write src/**/*.{ts,tsx}",
        "fix:eslint": "eslint src --fix"
    },
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.11",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "chai": "^4.3.4",
        "eslint": "^8.0.1",
        "mocha": "^9.1.3",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "prettier": "^2.4.1",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.3"
    }
}
